<UserControl x:Class="File.Manager.NavigationBarPathItemControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:File.Manager"
             mc:Ignorable="d" >

    <Grid>

        <!--design time--> 
        <d:Label Content="Home"
                 VerticalAlignment="Center" Style="{StaticResource PathTextStyle}"/>

        <!--actual label-->
        <Label Content="{Binding DirectoryName}"
               VerticalAlignment="Center" Style="{StaticResource PathTextStyle}"/>

    </Grid>
</UserControl>
