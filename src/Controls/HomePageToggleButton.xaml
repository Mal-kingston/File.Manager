<UserControl x:Class="File.Manager.Controls.HomePageToggleButton"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:File.Manager.Controls"
             mc:Ignorable="d" Width="800">
    <Grid>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <Grid Grid.Column="0" Margin="40 0" Background="{DynamicResource WhiteColorBrush}" Panel.ZIndex="1" >
            <ToggleButton Content="Drives and devices overview" Foreground="{DynamicResource BlueColorBrush}" 
                          Padding="14 2" Height="30" 
                          FontSize="{StaticResource XXSmall}" HorizontalAlignment="Left" VerticalAlignment="Center" 
                          BorderBrush="{x:Null}" Background="{DynamicResource WhiteColorBrush}"/>

        </Grid>

        <Border Grid.Column="0" Grid.ColumnSpan="2" Background="{DynamicResource BlueColorBrush}" Height="1" Margin="10 0" Focusable="False" />

    </Grid>
</UserControl>
