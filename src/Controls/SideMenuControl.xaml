<UserControl x:Class="File.Manager.SideMenuControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:File.Manager"
             mc:Ignorable="d" 
             d:DesignHeight="650" d:DesignWidth="250" 
             d:Background="{StaticResource BlueColorBrush}" >

    <ScrollViewer x:Name="ScrollViewer" Style="{StaticResource ScrollViewerStyle}" Grid.Row="1"
                  HorizontalScrollBarVisibility="Disabled" Background="Transparent" 
                  VerticalScrollBarVisibility="Auto" ScrollChanged="ScrollViewer_ScrollChanged">

        <Grid >
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <!--overview-->
            <Border Grid.Row="0" Margin="0 0 0 30">
                <local:DirectoryCollectionControl Header="Overview" DataContext="{Binding OverViewItems}" />
            </Border>
            <!--quick access-->
            <Border Grid.Row="1" Margin="0 0 0 30" >
                <local:DirectoryCollectionControl Header="Quick access" DataContext="{Binding QuickAccessItems}" IsParentToQuickAccessDirectories="True" />
            </Border>
            <!--main library-->
            <Border Grid.Row="2" Margin="0 0 0 0" >
                <local:DirectoryCollectionControl Header="Main library" DataContext="{Binding MainLibraryItems}" />
            </Border>
            <!--drives-->
            <Border Grid.Row="3" Margin="0 30 0 0" >
                <local:DirectoryCollectionControl Header="Drives and devices" DataContext="{Binding DrivesItems}" />
            </Border>
            
            <!--fills in and serves as a background to a transparent scrollviewer whenever it is active, But collapses whenever scrollviewer is inactive-->
            <Border x:Name="RightBorder" Background="{DynamicResource BlueColorBrush}" 
                    Width="10" Grid.Row="0" Grid.RowSpan="4" HorizontalAlignment="Right" Visibility="Collapsed" />

        </Grid>
    </ScrollViewer>
</UserControl>
